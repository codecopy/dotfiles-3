[bar/top]
width = 100%
height = 20
background = #181715
foreground = #E8E1E1
tray-position = right
fixed-center = true
font-0 = Gohu GohuFont:pixelsize=14;1
font-1 = SourceCodePro+Powerline+Awesome Regular:pixelsize=10;2
font-2 = Hasklig Nerd Font:pixelsize=20;5
font-3 = UbuntuMono Nerd Font:pixelsize=14;1
font-4 = UbuntuMono Nerd Font:pixelsize=17;2
modules-left = apps i3 vpn ip weather
modules-center = xwindow
modules-right = fs-root cputemp gputemp cpu memory wired updates volume date powermenu
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[module/wired]
type = internal/network
interface = enp5s0
interval = 3.0
ping-interval = 3
accumulate-stats = true
label-connected = %downspeed:3%  %upspeed:3% 
format-disconnected = <label-disconnected>
label-disconnected = not connected

[module/fs-root]
type = internal/fs
interval = 25
mount-0 = /
label-mounted =  %free%

[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true
; strip-wsnumbers = true
enable-scroll = false
; format = <label-state> <label-mode>
format = <label-mode> <label-state>
format-padding-left = 1
fuzzy-match = true
label-unfocused-foreground = #ffffff
label-focused-foreground = #c16772
label-urgent-foreground = #e4b226

[module/cpu]
type = internal/cpu
interval = 3
label = %{T5}%{T-} %percentage:2%%
format = <label>
format-padding= 0

[module/memory]
type = internal/memory
interval = 3
format = <label>
label = %gb_used%
label-padding= 1

[module/battery]
type = internal/battery
full-at = 100
battery = BAT1
adapter = ACAD
poll-interval = 5
