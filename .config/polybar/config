[module/ip]
type = custom/script
exec = curl -s https://4.ifcfg.me
interval = 5
label  = %output%
label-padding= 1
format-prefix = 

[module/vpn]
type = custom/script
exec = curl -s https://4.ifcfg.me/country
exec-if = pgrep -x openvpn
interval = 5
label =  %output%
label-padding = 1

[module/cputemp]
type = custom/script
exec-if = sensors
exec =  sensors | grep CPUTIN | cut -c18-19
format-prefix = "%{T4} %{T-}"
format-suffix = "°C"

[module/gputemp]
type = custom/script
exec-if = sensors
exec =  nvidia-settings -q [gpu:0]/GPUCoreTemp | grep '):' | awk '{print $4}' | sed 's/\.//'
format-prefix = "GPU %{T4} %{T-}"
format-suffix = "°C "

[module/apps]
