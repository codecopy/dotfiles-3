[module/updates]
type = custom/script
exec = checkupdates | wc -l
exec-if = ! checkupdates | wc -l | grep -q 0
interval = 10
label  =  %output%
label-padding= 1

[module/vol]
type = custom/script
exec = amixer -c 0 get Master | grep Mono: | awk '{print $4}' | tr -d ']' | tr -d '['
interval = 3
label  =  %output%
label-padding= 1

[module/ip]
type = custom/script
exec = curl -s https://4.ifcfg.me
interval = 5
label  = %output%
label-padding= 1
format-prefix = 

[module/vpn]
type = custom/script
exec = curl -s https://4.ifcfg.me/country
exec-if = pgrep -x chromium
interval = 5
label =  %output%
label-padding = 1

[module/cputemp]
type = custom/script
exec-if = sensors
exec =  sensors | grep CPUTIN | cut -c18-19
format-prefix = "CPU %{T4} %{T-}"
format-suffix = "°C"
format-padding = 1

[module/gputemp]
type = custom/script
exec-if = sensors
exec =  nvidia-settings -q [gpu:0]/GPUCoreTemp | grep '):' | awk '{print $4}' | sed 's/\.//'
format-prefix = "GPU %{T4} %{T-}"
format-suffix = "°C "

[module/apps]
type = custom/menu
menu-0-0 = Browsers
menu-0-0-exec = menu-open-1
menu-0-2 = Multimedia
menu-0-2-exec = menu-open-2
menu-1-0 = Firefox
menu-1-0-exec = firefox &
menu-1-1 = Chromium
menu-1-1-exec = chromium &
menu-2-0 = Gimp
menu-2-0-exec = gimp &
menu-2-1 = Scrot
menu-2-1-exec = scrot &
label-open = 
label-padding = 1
label-close = x
label-separator = |

[module/weather]
type = custom/script
interval = 600
format = <label>
format-prefix = " "
exec = python $HOME/scripts/weather
