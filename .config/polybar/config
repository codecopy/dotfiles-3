menu-1-0-exec = firefox &
menu-1-1 = Chromium
menu-1-1-exec = chromium &
menu-2-0 = Gimp
menu-2-0-exec = gimp &
menu-2-1 = Scrot
menu-2-1-exec = scrot &
label-open = 
label-open-padding-left = 1
label-close-padding = 1
label-close = x
label-separator = |

[module/weather]
