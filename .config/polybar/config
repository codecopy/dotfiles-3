[module/updates]
type = custom/script
exec = checkupdates | wc -l
interval = 10
label  =  %output%
label-padding= 1

[module/ip]
type = custom/script
exec = curl -s https://4.ifcfg.me
interval = 10
label  = ip %output%
label-padding= 1

[module/vpn]
type = custom/script
exec = pgrep -x chromium
interval = 5
label = vpn
label-padding = 1
format-prefix =  

[module/cputemp]
type = custom/script
exec-if = sensors
exec =  sensors | grep CPUTIN | cut -c18-19
format-prefix = "CPU  "
format-suffix = "°C "

[module/gputemp]
type = custom/script
exec-if = sensors
exec =  nvidia-settings -q [gpu:0]/GPUCoreTemp | grep '):' | awk '{print $4}' | sed 's/\.//'
format-prefix = "GPU  "
format-suffix = "°C "

