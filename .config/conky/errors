-- vi: ft=conkyrc

conky.config = {
	background = false,
	use_xft = true,
	font = 'lucy tewii:size=10',
	xftalpha = 1.0,
	update_interval = 2,
	total_run_times = 0,
	own_window = true,
	own_window_type = 'desktop',
	own_window_class = 'Conky',
	own_window_transparent = true,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	minimum_height = 100,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	default_color = 'white',
	default_shade_color = 'black',
	alignment = 'top_right',
	gap_x = 320,
	gap_y = 70,
	double_buffer = true,
	cpu_avg_samples = 2,
	override_utf8_locale = false,
	text_buffer_size = 16384,
	override_utf8_locale = true,
	default_color = '#cccccc',
};

conky.text =
[[
Arch Linux Bugs
$stippled_hr
${rss https://bugs.archlinux.org/feed.php?feed_type=rss1&project=1 10 item_titles 5}

Arch Linux Forum
$stippled_hr
${rss https://bbs.archlinux.org/extern.php?action=feed&type=rss 10 item_titles 5}

Spiegel Online Top
$stippled_hr
${rss http://www.spiegel.de/index.rss 10 item_titles 5}

Spiegel Online Netzwelt
$stippled_hr
${rss http://www.spiegel.de/netzwelt/index.rss 10 item_titles 5}

Golem
$stippled_hr
${rss https://rss.golem.de/rss.php?feed=RSS1.0 10 item_titles 5}

Hackernews
$stippled_hr
${rss https://news.ycombinator.com/rss 10 item_titles 5}

Stackoverflow
$stippled_hr
${execi 600 curl -s --compressed "https://api.stackexchange.com/2.2/questions?order=desc&sort=creation&site=stackoverflow&filter=%21%29R7_Ydlui0%285xElvIXH9T.Ck" | jq -r '.[] | .[] | .[]' | head -n 5}

Journalctl
$stippled_hr
${execi 10 journalctl -p 4 --since yesterday --no-pager | uniq -f 4 | grep -v '^\ ' | tail -n 10}
]];
