conky.config = {
	background = false,
	use_xft = true,
	font = 'lucy tewii:size=10',
	xftalpha = 1.0,
	update_interval = 2,
	total_run_times = 0,
	own_window = true,
	own_window_type = 'desktop',
	own_window_class = 'Conky',
	own_window_transparent = true,
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	minimum_height = 100,
	draw_shades = false,
	draw_outline = false,
	draw_borders = false,
	default_color = 'white',
