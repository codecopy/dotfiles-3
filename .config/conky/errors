	gap_x = 300,
	gap_y = 820,
	double_buffer = true,
	cpu_avg_samples = 2,
	override_utf8_locale = false,
	text_buffer_size = 16384,
	override_utf8_locale = true,
	default_color = '#cccccc',
};

conky.text =
[[
${execi 600 curl -s --compressed "https://api.stackexchange.com/2.2/questions?order=desc&sort=creation&site=stackoverflow&filter=%21%29R7_Ydlui0%285xElvIXH9T.Ck" | jq -r '.[] | .[] | .[]' | head -n 18}
${voffset 10}
${execi 10 journalctl -p 4 --since yesterday --no-pager | uniq -f 4 | grep -v '^\ ' | tail -n 18}
]];
