###############
# bspwm hotkeys
###############

# kill window
control + q
    bspc node -k || kill -9 $(xdotool getactivewindow getwindowpid)

# quit bspwm normally
super + alt + Escape
    zenity --question --text="Quit bspwm?" && bspc quit

# reload sxhkd config
super + shift + r
    pkill -USR1 -x sxhkd

# alternate between the tiled and monocle layout
super + m
    bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
    bspc node -s biggest

# resize window to watch conky
super + c
    zsh ~/scripts/bspwm/toggle-conky-padding.zsh right

super + x
    zsh ~/scripts/bspwm/toggle-conky-padding.zsh left

super + v
    zsh ~/scripts/bspwm/toggle-conky-padding.zsh down

#############
# state/flags
#############

# set the window state
super + {t,shift + t}
    bspc node -t {tiled,pseudo_tiled}

# toggle fullscreen
super + f
    bspc node -t fullscreen || bspc node -t tiled

# set the node flags
super + ctrl + {x,y,z}
    bspc node -g {locked,sticky,private}

# toggle floating
super + @space
    bspc node -t floating || bspc node -t tiled

############
# focus/swap
############

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	{bspc desktop -f, bash ~/scripts/bspwm/switch-move.bash} ^{1-9,0}

super + {_,shift + }{0}
	{bspc desktop -f, bash ~/scripts/bspwm/switch-move.bash} 0

# focus the node in the given direction
super + {_,alt + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}.local

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + } Tab
    bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {prev,next}.local

# switch monitor
alt + space
	bspc monitor -f next

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
# super + {_,shift + }{1-9,0}
    # bspc {desktop -f,node -d} '^{1-9,10}'

###########
# preselect
###########

# preselect the direction
super + ctrl + {h,j,k,l}
    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#############
# move/resize
#############

super + shift + h
    bspc node -z left -80 0 || bspc node -z right -80 0

super + shift + j
    bspc node -z bottom 0 80 || bspc node -z top 0 80

super + shift + k
    bspc node -z top 0 -80 || bspc node -z bottom 0 -80

super + shift + l
    bspc node -z right 80 0 || bspc node -z left 80 0

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-20 0,0 20,0 -20,20 0}

super + s
    id=$(bspc query -N -n "focused");\
    if [ -n "$id" ];then \
        xprop -id $id -f _SCRATCH 32ii -set _SCRATCH $(date +%s,%N);\
        bspc node -t "floating";\
        xdotool windowunmap $id;\
    fi

super + shift + s
    i=$(bspc query -N -n "focused.floating");\
    if [ -n "$i" ];then \
        xprop -id $i -f _SCRATCH 32ii -set _SCRATCH $(date +%s,%N);\
        xdotool windowunmap $i;\
    else;\
        i=$(for w in $(xwininfo -root -children | grep -e "^\s*0x[0-9a-f]\+" -o);do \
            t=$(xprop -id $w _SCRATCH | grep ' = \(.*\)');\
            if [ -n "$t" ];then \
                echo $t $w;\
            fi;\
        done|sort -n|head -n1|cut -d" " -f 5);\
        if [ -n "$i" ];then \
            xprop -id $i -remove _SCRATCH;\
            bspc rule -a \* state=floating center=on --one-shot;\
            xdotool windowmap $i;\
            bspc node -f $i;\
        fi;\
    fi   zsh ~/scripts/bspwm/scratchpad.zsh
