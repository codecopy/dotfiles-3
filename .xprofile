# clear download folder
bash -c "mv ~/Downloads/* mv ~/Downloads/old" &

# wait for active internet connection and start desktop background monitor
bash -c 'while [[ ! $(curl -I google.com | grep 302) ]]; do sleep 1; done && conky -c ~/.conky/conkyrc' &

bash -c 'sleep 10 && conky -c ~/.conky/errors' &

# backup packages list
bash -c "pacman -Qqe > ~/Dropbox/ArchBackup/pkglist_$(date +%F).txt" &

# automute while afk
bash -c "~/scripts/automute.sh" &

# autoupdate system (pacman / yaourt)
bash -c "~/scripts/autoupdate.bash" &

# monitor events
bash -c "~/scripts/monitoring.bash" &

# sync github mirror repositories
bash -c "~/scripts/mirror.bash" &

# low memory warning (freeze swap prevention)
bash -c "~/scripts/lowmem.bash" &

# email client
thunderbird &

# notification deamon
dunst &

# web browser
chromium &

# sound
pulseaudio --start &

# reduce monitor brigthness at night
redshift &

xrdb ~/.Xdefaults
xrdb ~/.Xresources
xmodmap ~/.Xmodmap
setxkbmap de

# compositor
compton --backend glx --vsync opengl-swc &

# polybar
while true; do SHELL=/bin/bash polybar -r top-bspwm; done &

